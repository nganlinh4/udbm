{
  "name": "udbm",
  "version": "2.0.0",
  "description": "uDBM - Realtime Database Monitor Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:pydev\" \"npm:edev\"",
    "pydev": "node scripts/run-backend.js",
    "edev": "electron .",
    "pybuild": "node scripts/build-backend.js",
    "electron:build": "electron-builder",
    "build": "npm run pybuild && npm run electron:build",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "database",
    "monitor",
    "mysql",
    "postgresql",
    "electron"
  ],
  "author": "nganlinh4",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.nganlinh4.udbm",
    "productName": "uDBM",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "!backend/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist/monitor",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "portable": {
      "artifactName": "uDBM-${version}-portable.exe"
    }
  }
}
