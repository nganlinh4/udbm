{
  "name": "udbm-electron",
  "version": "1.0.0",
  "description": "uDBM - Realtime Database Monitor (Electron App)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node scripts/build-clean.js",
    "build-simple": "electron-builder",
    "build-python": "pyinstaller --onefile --distpath ./dist/python monitor.py",
    "postinstall": "electron-builder install-app-deps",
    "test-build": "npm run build && npm run test-portable",
    "test-portable": "node scripts/test-portable.js",
    "pre-release": "npm run test-build && echo 'All tests passed! Ready for release.'",
    "cleanup": "node scripts/cleanup.js"
  },
  "keywords": [
    "database",
    "monitor",
    "mysql",
    "postgresql",
    "electron",
    "desktop"
  ],
  "author": "uDBM Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.udbm.electron",
    "productName": "uDBM - Database Monitor",
    "directories": {
      "output": "dist/electron-build"
    },
    "files": [
      "src/**/*",
      "static/**/*",
      "dist/python/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/python/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "static/monitor_icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "static/monitor_icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "static/monitor_icon.png"
    }
  }
}
